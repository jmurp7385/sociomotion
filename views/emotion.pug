extends layout

block content 
    h1= title2
    div.center  
      div.anger(style={width: anger*(1000/10)+'%'})
        p= "Anger: "
        p= (anger * (1000/10)).toFixed(2) + '%'
      div.disgust(style={width: disgust*(1000/10)+'%'})
        p= "Disgust: "        
        p= (disgust * (1000/10)).toFixed(2) + '%'        
      div.fear(style={width: fear*(1000/10)+'%'})
        p= "Fear: "
        p= (fear * (1000/10)).toFixed(2) + '%'        
      div.joy(style={width: joy*(1000/10)+'%'})
        p= "Joy: "
        p= (joy * (1000/10)).toFixed(2) + '%'
      div.sadness(style={width: sadness*(1000/10)+'%'})
        p= "Sadness: "
        p= (sadness * (1000/10)).toFixed(2) + '%'
      //- div
        //- iframe#graph(width='900' height='800', frameborder='0', scrolling="no", src="//plot.ly/~njvanhaute/0.embed")
    
      form(method='get' action='/')
        div.form-group
          input#search_button.form-control(type='submit', value='Search Another')        
